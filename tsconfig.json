{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "be/server/*"
            ]
        }
    },
    "include": [
        "be/**/*.ts",
        "fe/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}