# Backend Environment Variables Template

# Database Configuration
DATABASE_URL="mysql://user:password@localhost:3306/sistem_cpl"

# JWT Authentication
JWT_SECRET="your-super-secret-key-change-in-production-minimum-32-characters"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration
# For multiple origins, separate with comma: http://localhost:5173,https://yourdomain.com
CORS_ORIGIN="http://localhost:5173"

# Logging
LOG_LEVEL="info"

# Session
SESSION_EXPIRY_DAYS=7
