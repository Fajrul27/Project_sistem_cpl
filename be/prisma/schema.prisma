generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String                 @id @default(uuid())
  email              String                 @unique
  passwordHash       String                 @map("password_hash")
  createdAt          DateTime               @default(now()) @map("created_at")
  updatedAt          DateTime               @updatedAt @map("updated_at")
  lastLogin          DateTime?              @map("last_login")
  isActive           Boolean                @default(true) @map("is_active")
  emailVerified      Boolean                @default(false) @map("email_verified")
  auditLogs          AuditLog[]
  cplCreated         Cpl[]                  @relation("CplCreatedBy")
  cpmkCreated        Cpmk[]                 @relation("CpmkCreatedBy")
  mkCreated          MataKuliah[]           @relation("MataKuliahCreatedBy")
  nilaiCreated       NilaiCpl[]             @relation("NilaiCreatedBy")
  nilaiTeknikCreated NilaiTeknikPenilaian[] @relation("NilaiTeknikCreatedBy")
  profile            Profile?
  sessions           Session[]
  role               UserRole?
  evaluasiDosen      EvaluasiMataKuliah[]

  @@index([email])
  @@index([isActive])
  @@map("users")
}

model UserRole {
  id        Int      @id @default(autoincrement())
  userId    String   @unique @map("user_id")
  role      Role     @default(mahasiswa)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([role])
  @@index([userId])
  @@map("user_roles")
}

model Profile {
  id                 String                 @id @default(uuid())
  userId             String                 @unique @map("user_id")
  namaLengkap        String?                @map("nama_lengkap")
  nim                String?                @unique
  nip                String?                @unique
  programStudi       String?                @map("program_studi")
  semester           Int?
  tahunMasuk         Int?                   @map("tahun_masuk")
  alamat             String?                @db.Text
  noTelepon          String?                @map("no_telepon")
  fotoProfile        String?                @map("foto_profile")
  createdAt          DateTime               @default(now()) @map("created_at")
  updatedAt          DateTime               @updatedAt @map("updated_at")
  nidn               String?                @unique
  fakultasId         String?                @map("fakultas_id")
  prodiId            String?                @map("prodi_id")
  mataKuliahPengampu MataKuliahPengampu[]
  nilaiCpl           NilaiCpl[]             @relation("MahasiswaNilai")
  nilaiCpmk          NilaiCpmk[]            @relation("MahasiswaNilaiCpmk")
  nilaiSubCpmk       NilaiSubCpmk[]         @relation("MahasiswaNilaiSubCpmk")
  nilaiTeknik        NilaiTeknikPenilaian[] @relation("MahasiswaNilaiTeknik")
  penilaianTidakLangsung PenilaianTidakLangsung[]
  fakultas           Fakultas?              @relation(fields: [fakultasId], references: [id])
  prodi              Prodi?                 @relation(fields: [prodiId], references: [id])
  semesterRef        Semester?              @relation(fields: [semesterId], references: [id])
  semesterId         String?                @map("semester_id")
  kelasRef           Kelas?                 @relation(fields: [kelasId], references: [id])
  kelasId            String?                @map("kelas_id")
  angkatanRef        Angkatan?              @relation(fields: [angkatanId], references: [id])
  angkatanId         String?                @map("angkatan_id")
  user               User                   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([nim])
  @@index([nip])
  @@index([nidn])
  @@index([programStudi])
  @@index([prodiId])
  @@index([fakultasId])
  @@index([semester])
  @@index([semesterId])
  @@index([kelasId])
  @@map("profiles")
}

model Cpl {
  id           String           @id @default(uuid())
  kodeCpl      String           @unique @map("kode_cpl")
  deskripsi    String           @db.Text
  kategori     String?
  isActive     Boolean          @default(true) @map("is_active")
  createdAt    DateTime         @default(now()) @map("created_at")
  updatedAt    DateTime         @updatedAt @map("updated_at")
  createdBy    String?          @map("created_by")
  kategoriId   String?          @map("kategori_id")
  prodiId      String?          @map("prodi_id")
  creator      User?            @relation("CplCreatedBy", fields: [createdBy], references: [id])
  kategoriRef  KategoriCpl?     @relation(fields: [kategoriId], references: [id])
  prodi        Prodi?           @relation(fields: [prodiId], references: [id])
  mataKuliah   CplMataKuliah[]
  cpmkMappings CpmkCplMapping[]
  nilaiCpl     NilaiCpl[]
  profilLulusanMappings ProfilLulusanCpl[]
  penilaianTidakLangsung PenilaianTidakLangsung[]

  @@index([kodeCpl])
  @@index([kategori])
  @@index([kategoriId])
  @@index([prodiId])
  @@index([isActive])
  @@index([createdBy], map: "cpl_created_by_fkey")
  @@map("cpl")
}

model MataKuliah {
  id           String                 @id @default(uuid())
  kodeMk       String                 @unique @map("kode_mk")
  namaMk       String                 @map("nama_mk")
  sks          Int
  semester     Int
  deskripsi    String?                @db.Text
  isActive     Boolean                @default(true) @map("is_active")
  createdAt    DateTime               @default(now()) @map("created_at")
  updatedAt    DateTime               @updatedAt @map("updated_at")
  createdBy    String?                @map("created_by")
  programStudi String?                @map("program_studi")
  jenisMkId    String?                @map("jenis_mk_id")
  kurikulumId  String?                @map("kurikulum_id")
  prodiId      String?                @map("prodi_id")
  semesterId   String?                @map("semester_id")
  cpl          CplMataKuliah[]
  cpmk         Cpmk[]
  creator      User?                  @relation("MataKuliahCreatedBy", fields: [createdBy], references: [id])
  jenisMk      JenisMataKuliah?       @relation(fields: [jenisMkId], references: [id])
  kurikulum    Kurikulum?             @relation(fields: [kurikulumId], references: [id])
  prodi        Prodi?                 @relation(fields: [prodiId], references: [id])
  semesterRef  Semester?              @relation(fields: [semesterId], references: [id])
  pengampu     MataKuliahPengampu[]
  nilaiCpl     NilaiCpl[]
  nilaiCpmk    NilaiCpmk[]
  nilaiSubCpmk NilaiSubCpmk[]
  nilaiTeknik  NilaiTeknikPenilaian[]
  evaluasi     EvaluasiMataKuliah[]

  @@index([kodeMk])
  @@index([semester])
  @@index([semesterId])
  @@index([programStudi])
  @@index([prodiId])
  @@index([kurikulumId])
  @@index([isActive])
  @@index([createdBy], map: "mata_kuliah_created_by_fkey")
  @@index([jenisMkId], map: "mata_kuliah_jenis_mk_id_fkey")
  @@map("mata_kuliah")
}

model CplMataKuliah {
  id              String     @id @default(uuid())
  cplId           String     @map("cpl_id")
  mataKuliahId    String     @map("mata_kuliah_id")
  bobotKontribusi Decimal    @default(1.00) @map("bobot_kontribusi") @db.Decimal(3, 2)
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")
  cpl             Cpl        @relation(fields: [cplId], references: [id], onDelete: Cascade)
  mataKuliah      MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)

  @@unique([cplId, mataKuliahId])
  @@index([cplId])
  @@index([mataKuliahId])
  @@map("cpl_mata_kuliah")
}

model Cpmk {
  id                String            @id @default(uuid())
  kodeCpmk          String            @map("kode_cpmk")
  deskripsi         String?           @db.Text
  mataKuliahId      String            @map("mata_kuliah_id")
  isActive          Boolean           @default(true) @map("is_active")
  createdAt         DateTime          @default(now()) @map("created_at")
  updatedAt         DateTime          @updatedAt @map("updated_at")
  createdBy         String?           @map("created_by")
  statusValidasi    String            @default("draft") @map("status_validasi")
  validatedAt       DateTime?         @map("validated_at")
  validatedBy       String?           @map("validated_by")
  levelTaksonomi    String?           @map("level_taksonomi")
  levelTaksonomiId  String?           @map("level_taksonomi_id")
  creator           User?             @relation("CpmkCreatedBy", fields: [createdBy], references: [id])
  levelTaksonomiRef LevelTaksonomi?   @relation(fields: [levelTaksonomiId], references: [id])
  mataKuliah        MataKuliah        @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  cplMappings       CpmkCplMapping[]
  nilaiCpmk         NilaiCpmk[]
  teknikPenilaian   TeknikPenilaian[]
  rubrik            Rubrik?
  subCpmk           SubCpmk[]

  @@index([mataKuliahId])
  @@index([kodeCpmk])
  @@index([statusValidasi])
  @@index([levelTaksonomiId])
  @@index([isActive])
  @@index([createdBy], map: "cpmk_created_by_fkey")
  @@map("cpmk")
}

model CpmkCplMapping {
  id              String   @id @default(uuid())
  cpmkId          String   @map("cpmk_id")
  cplId           String   @map("cpl_id")
  bobotPersentase Decimal  @map("bobot_persentase") @db.Decimal(5, 2)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  cpl             Cpl      @relation(fields: [cplId], references: [id], onDelete: Cascade)
  cpmk            Cpmk     @relation(fields: [cpmkId], references: [id], onDelete: Cascade)

  @@unique([cpmkId, cplId])
  @@index([cpmkId])
  @@index([cplId])
  @@map("cpmk_cpl_mapping")
}

model TeknikPenilaian {
  id              String                 @id @default(uuid())
  cpmkId          String                 @map("cpmk_id")
  namaTeknik      String                 @map("nama_teknik")
  bobotPersentase Decimal                @map("bobot_persentase") @db.Decimal(5, 2)
  deskripsi       String?                @db.Text
  createdAt       DateTime               @default(now()) @map("created_at")
  updatedAt       DateTime               @updatedAt @map("updated_at")
  teknikRefId     String?                @map("teknik_ref_id")
  nilaiTeknik     NilaiTeknikPenilaian[]
  // rubrik relation removed - now at CPMK level
  cpmk            Cpmk                   @relation(fields: [cpmkId], references: [id], onDelete: Cascade)
  teknikRef       TeknikPenilaianRef?    @relation(fields: [teknikRefId], references: [id])
  subCpmkMappings AsesmenSubCpmk[]

  @@index([cpmkId])
  @@index([teknikRefId])
  @@map("teknik_penilaian")
}

model SubCpmk {
  id        String   @id @default(uuid())
  cpmkId    String   @map("cpmk_id")
  kode      String   // e.g. Sub-CPMK-1.1
  deskripsi String   @db.Text
  bobot     Decimal  @default(0) @db.Decimal(5, 2)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  cpmk      Cpmk     @relation(fields: [cpmkId], references: [id], onDelete: Cascade)
  asesmenMappings AsesmenSubCpmk[]
  nilaiSubCpmk    NilaiSubCpmk[]

  @@index([cpmkId])
  @@map("sub_cpmk")
}

model AsesmenSubCpmk {
  id                String          @id @default(uuid())
  teknikPenilaianId String          @map("teknik_penilaian_id")
  subCpmkId         String          @map("sub_cpmk_id")
  bobot             Decimal         @default(100) @db.Decimal(5, 2)
  createdAt         DateTime        @default(now()) @map("created_at")

  teknikPenilaian   TeknikPenilaian @relation(fields: [teknikPenilaianId], references: [id], onDelete: Cascade)
  subCpmk           SubCpmk         @relation(fields: [subCpmkId], references: [id], onDelete: Cascade)

  @@unique([teknikPenilaianId, subCpmkId])
  @@index([teknikPenilaianId])
  @@index([subCpmkId])
  @@map("asesmen_sub_cpmk")
}

model NilaiCpl {
  id           String     @id @default(uuid())
  mahasiswaId  String     @map("mahasiswa_id")
  cplId        String     @map("cpl_id")
  mataKuliahId String     @map("mata_kuliah_id")
  nilai        Decimal    @db.Decimal(5, 2)
  semester     Int
  semesterId   String?    @map("semester_id")
  tahunAjaran  String     @map("tahun_ajaran")
  catatan      String?    @db.Text
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  createdBy    String?    @map("created_by")
  cpl          Cpl        @relation(fields: [cplId], references: [id], onDelete: Cascade)
  creator      User?      @relation("NilaiCreatedBy", fields: [createdBy], references: [id])
  mahasiswa    Profile    @relation("MahasiswaNilai", fields: [mahasiswaId], references: [userId], onDelete: Cascade)
  mataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  semesterRef  Semester?  @relation(fields: [semesterId], references: [id])

  @@unique([mahasiswaId, cplId, mataKuliahId, semester, tahunAjaran])
  @@index([mahasiswaId])
  @@index([cplId])
  @@index([mataKuliahId])
  @@index([semester])
  @@index([semesterId])
  @@index([tahunAjaran])
  @@index([createdBy], map: "nilai_cpl_created_by_fkey")
  @@map("nilai_cpl")
}

model NilaiTeknikPenilaian {
  id                String          @id @default(uuid())
  mahasiswaId       String          @map("mahasiswa_id")
  teknikPenilaianId String          @map("teknik_penilaian_id")
  mataKuliahId      String          @map("mata_kuliah_id")
  nilai             Decimal         @db.Decimal(5, 2)
  semester          Int
  semesterId        String?         @map("semester_id")
  tahunAjaran       String          @map("tahun_ajaran")
  catatan           String?         @db.Text
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @updatedAt @map("updated_at")
  createdBy         String?         @map("created_by")
  nilaiRubrik       NilaiRubrik[]
  creator           User?           @relation("NilaiTeknikCreatedBy", fields: [createdBy], references: [id])
  mahasiswa         Profile         @relation("MahasiswaNilaiTeknik", fields: [mahasiswaId], references: [userId], onDelete: Cascade)
  mataKuliah        MataKuliah      @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  teknikPenilaian   TeknikPenilaian @relation(fields: [teknikPenilaianId], references: [id], onDelete: Cascade)
  semesterRef       Semester?       @relation(fields: [semesterId], references: [id])

  @@unique([mahasiswaId, teknikPenilaianId, semester, tahunAjaran])
  @@index([mahasiswaId])
  @@index([teknikPenilaianId])
  @@index([mataKuliahId])
  @@index([semester])
  @@index([semesterId])
  @@index([tahunAjaran])
  @@index([createdBy], map: "nilai_teknik_penilaian_created_by_fkey")
  @@map("nilai_teknik_penilaian")

}

model NilaiSubCpmk {
  id           String     @id @default(uuid())
  mahasiswaId  String     @map("mahasiswa_id")
  subCpmkId    String     @map("sub_cpmk_id")
  mataKuliahId String     @map("mata_kuliah_id")
  nilai        Decimal    @db.Decimal(5, 2)
  semester     Int
  semesterId   String?    @map("semester_id")
  tahunAjaran  String     @map("tahun_ajaran")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  
  subCpmk      SubCpmk    @relation(fields: [subCpmkId], references: [id], onDelete: Cascade)
  mahasiswa    Profile    @relation("MahasiswaNilaiSubCpmk", fields: [mahasiswaId], references: [userId], onDelete: Cascade)
  mataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  semesterRef  Semester?  @relation(fields: [semesterId], references: [id])

  @@unique([mahasiswaId, subCpmkId, semester, tahunAjaran])
  @@index([mahasiswaId])
  @@index([subCpmkId])
  @@index([mataKuliahId])
  @@index([semester])
  @@index([semesterId])
  @@index([tahunAjaran])
  @@map("nilai_sub_cpmk")
}

model NilaiCpmk {
  id           String     @id @default(uuid())
  mahasiswaId  String     @map("mahasiswa_id")
  cpmkId       String     @map("cpmk_id")
  mataKuliahId String     @map("mata_kuliah_id")
  nilaiAkhir   Decimal    @map("nilai_akhir") @db.Decimal(5, 2)
  semester     Int
  semesterId   String?    @map("semester_id")
  tahunAjaran  String     @map("tahun_ajaran")
  isCalculated Boolean    @default(true) @map("is_calculated")
  calculatedAt DateTime   @default(now()) @map("calculated_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  cpmk         Cpmk       @relation(fields: [cpmkId], references: [id], onDelete: Cascade)
  mahasiswa    Profile    @relation("MahasiswaNilaiCpmk", fields: [mahasiswaId], references: [userId], onDelete: Cascade)
  mataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  semesterRef  Semester?  @relation(fields: [semesterId], references: [id])

  @@unique([mahasiswaId, cpmkId, semester, tahunAjaran])
  @@index([mahasiswaId])
  @@index([cpmkId])
  @@index([mataKuliahId])
  @@index([semester])
  @@index([semesterId])
  @@index([tahunAjaran])
  @@map("nilai_cpmk")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent") @db.Text
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("sessions")
}

model AuditLog {
  id        BigInt   @id @default(autoincrement())
  userId    String?  @map("user_id")
  action    String
  tableName String   @map("table_name")
  recordId  String?  @map("record_id")
  oldData   String?  @map("old_data") @db.LongText
  newData   String?  @map("new_data") @db.LongText
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent") @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([tableName])
  @@index([createdAt])
  @@map("audit_logs")
}

model Fakultas {
  id        String    @id @default(uuid())
  nama      String    @unique
  kode      String    @unique
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  prodi     Prodi[]
  profiles  Profile[]

  @@map("fakultas")
}

model Prodi {
  id          String       @id @default(uuid())
  fakultasId  String       @map("fakultas_id")
  nama        String       @unique
  kode        String?
  jenjang     String?
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  cpl         Cpl[]
  kaprodiData KaprodiData?
  mataKuliah  MataKuliah[]
  fakultas    Fakultas     @relation(fields: [fakultasId], references: [id], onDelete: Cascade)
  profiles    Profile[]
  visiMisi    VisiMisi[]
  profilLulusan ProfilLulusan[]

  @@index([fakultasId])
  @@map("prodi")
}

model TahunAjaran {
  id        String   @id @default(uuid())
  nama      String   @unique
  isActive  Boolean  @default(false) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tahun_ajaran")
}

model KategoriCpl {
  id        String   @id @default(uuid())
  nama      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  cpl       Cpl[]

  @@map("kategori_cpl")
}

model TeknikPenilaianRef {
  id              String            @id @default(uuid())
  nama            String            @unique
  deskripsi       String?           @db.Text
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  teknikPenilaian TeknikPenilaian[]

  @@map("teknik_penilaian_ref")
}

model LevelTaksonomi {
  id        String   @id @default(uuid())
  kode      String   @unique
  deskripsi String?  @db.Text
  kategori  String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  cpmk      Cpmk[]

  @@map("level_taksonomi")
}

model Kurikulum {
  id           String       @id @default(uuid())
  nama         String       @unique
  tahunMulai   Int          @map("tahun_mulai")
  tahunSelesai Int?         @map("tahun_selesai")
  isActive     Boolean      @default(false) @map("is_active")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  mataKuliah   MataKuliah[]

  @@map("kurikulum")
}

model JenisMataKuliah {
  id         String       @id @default(uuid())
  nama       String       @unique
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  mataKuliah MataKuliah[]

  @@map("jenis_mata_kuliah")
}

model MataKuliahPengampu {
  id           String     @id @default(uuid())
  mataKuliahId String     @map("mata_kuliah_id")
  dosenId      String     @map("dosen_id")
  kelasId      String?    @map("kelas_id")
  isPengampu   Boolean    @default(true) @map("is_pengampu_utama")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  dosen        Profile    @relation(fields: [dosenId], references: [userId], onDelete: Cascade)
  mataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  kelas        Kelas?     @relation(fields: [kelasId], references: [id])

  @@unique([mataKuliahId, dosenId, kelasId])
  @@index([mataKuliahId])
  @@index([dosenId])
  @@index([kelasId])
  @@map("mata_kuliah_pengampu")
}

model KaprodiData {
  id           String   @id @default(uuid())
  programStudi String   @unique @map("program_studi")
  namaKaprodi  String   @map("nama_kaprodi")
  nidnKaprodi  String   @map("nidn_kaprodi")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  prodiId      String?  @unique @map("prodi_id")
  prodi        Prodi?   @relation(fields: [prodiId], references: [id])

