{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "server/*"
      ]
    },
    "rootDirs": [
      ".",
      "server"
    ],
    "types": [
      "node",
      "express",
      "multer"
    ]
  },
  "include": [
    "server/**/*.ts",
    "prisma/**/*.ts",
    "scripts/**/*.ts",
    "seed_teknik_ref.ts"
  ],
  "exclude": [
    "node_modules",
    "server/scripts/fix-permissions.ts"
  ]
}